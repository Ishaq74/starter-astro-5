---
import Section from '@atoms/Section.astro';
import { Icon } from 'astro-icon/components';

// 1. On reçoit l'objet 'entry' complet, comme pour toutes vos cartes.
const { entry } = Astro.props;

// 2. On extrait l'objet de données de l'utilisateur.
// C'est ici que se trouvent tous vos champs (nom, job, bio, etc.).
const user = entry.data.data;
---

<article class="user-card">
    <img
      class="user-card-avatar"
      src={user.avatar || "/images/avatar-john-doe.jpg"}
      alt={user.alt_avatar || `Avatar de ${user.nom}`}
    />
    
    <div class="user-card-header">
      <Icon name="mdi:account-tie" size="20" />
      <h3 class="user-card-name">{user.nom}</h3>
    </div>
    
    <div class="user-card-content">
        <div class="user-card-row">
            <Icon name="mdi:briefcase" size="20" />
            <p class="user-card-job">{user.job}</p>
        </div>

        {user.bio && (
            <p class="user-card-bio">{user.bio}</p>
        )}

        <div class="user-card-row">
            <Icon name="mdi:shield-account" size="20" />
            <p class="user-card-role">{user.role}</p>
        </div>

        {user.localisation && (
            <div class="user-card-row">
                <Icon name="mdi:map-marker" size="20" />
                <p class="user-card-location">{user.localisation}</p>
            </div>
        )}

        {user.links && Array.isArray(user.links) && user.links.length > 0 && (
            <div class="user-card-links">
                {user.links.map((link) => (
                    <a href={link} target="_blank" rel="noopener noreferrer" class="user-card-link">
                        <Icon name="mdi:web" size="20" />
                        <span>{link}</span>
                    </a>
                ))}
            </div>
        )}

        <div class="user-card-row">
            <Icon name="mdi:email" size="20" />
            <a href={`mailto:${user.email}`} class="user-card-email">{user.email}</a>
        </div>
    </div>
</article>

<style is:inline>
.user-card {
  background: var(--color-surface);
  border-radius: var(--radius-3);
  box-shadow: var(--elevation-e3);
  overflow: hidden;
  width: 100%;
}
.user-card-avatar {
  width: 100%;
  height: 14rem;
  object-fit: cover;
  object-position: center;
}
.user-card-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-3);
  background-color: var(--color-neutral-11);
  color: var(--color-neutral-0);
  gap: var(--space-3);
}
.user-card-name {
  font-weight: 700;
  margin: 0;
}
.user-card-content {
  padding: var(--space-4);
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}
.user-card-row {
  display: flex;
  gap: var(--space-2);
  align-items: center;
  color: var(--color-text);
}
.user-card-job {
  font-weight: 600;
  color: var(--color-text);
}
.user-card-bio {
  padding: var(--space-2) 0;
  color: var(--color-muted);
  font-size: 0.875rem;
}
.user-card-role {
  font-size: 0.875rem;
  text-transform: capitalize;
}
.user-card-location {
  font-size: 0.875rem;
}
.user-card-links {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  margin-top: var(--space-2);
}
.user-card-link {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  color: var(--color-primary);
  text-decoration: none;
  font-size: 0.875rem;
  transition: color var(--transition-speed) ease;
}
.user-card-link:hover {
  text-decoration: underline;
  color: var(--color-primary-hover);
}
.user-card-email {
  font-size: 0.875rem;
  color: var(--color-primary);
  text-decoration: none;
  transition: color var(--transition-speed) ease;
}
.user-card-email:hover {
  text-decoration: underline;
  color: var(--color-primary-hover);
}
</style>