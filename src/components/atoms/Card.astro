---


 export interface Props {
   variant?: 'primary' | 'secondary' | 'accent';
   className?: string;
   [key: string]: any;
 }

const {
  variant,
  className,
  ...htmlAttributes
} = Astro.props as Props;

const classes = variant ? `card ${variant}` : 'card';
---
<div {...htmlAttributes} class={classes} tabindex="0">
  <slot />
</div>
<style is:global>
/* Card AAA natif et variantes : structure commune */
.card {
  border: 2px solid var(--color-border);
  background: var(--color-surface, #fff);
  color: var(--color-text);
  box-shadow: var(--shadow-md);
  font-family: inherit;
  font-size: 1rem;
  font-weight: 400;
  line-height: 1.5;
  transition: box-shadow 0.2s, border-color 0.2s, background 0.2s;
  outline: none;
  margin-bottom: 0.5rem;
  border-radius: 1rem;
  display: block;
  padding: 1.5rem 1.25rem;
  box-sizing: border-box;
}
.card:focus {
  border-color: var(--color-focus);
  box-shadow: 0 0 0 3px var(--color-focus);
}
.card:hover,
.card.showcase-hover {
  box-shadow: var(--shadow-lg);
  border-color: var(--color-primary);
  background: var(--color-hover);
}
.card[tabindex="0"]:focus-visible {
  outline: 2px solid var(--color-focus);
  outline-offset: 2px;
}
/* Card AAA variantes */
.card.primary {
  border: 2px solid var(--color-primary);
  background: var(--color-primary);
  color: #fff;
  box-shadow: var(--shadow-lg);
}
.card.primary:hover,
.card.primary.showcase-hover {
  background: var(--color-primary-dark, #22253b);
  color: #fff;
  border-color: var(--color-primary-dark, #22253b);
  box-shadow: var(--shadow-lg);
}
.card.primary:focus {
  border-color: var(--color-focus);
  box-shadow: 0 0 0 3px var(--color-focus);
}
.card.secondary {
  border: 2px solid var(--color-secondary);
  background: var(--color-secondary);
  color: var(--color-primary);
  box-shadow: var(--shadow-lg);
}
.card.secondary:hover,
.card.secondary.showcase-hover {
  background: var(--color-secondary-dark, #c0c2c9);
  color: var(--color-primary);
  border-color: var(--color-primary);
  box-shadow: var(--shadow-lg);
}
.card.secondary:focus {
  border-color: var(--color-focus);
  box-shadow: 0 0 0 3px var(--color-focus);
}
.card.accent {
  border: 2px solid var(--color-accent);
  background: var(--color-accent);
  color: #fff;
  box-shadow: var(--shadow-lg);
}
.card.accent:hover,
.card.accent.showcase-hover {
  background: var(--color-accent-dark, #3e4b6a);
  color: #fff;
  border-color: var(--color-accent-dark, #3e4b6a);
  box-shadow: var(--shadow-lg);
}
.card.accent:focus {
  border-color: var(--color-focus);
  box-shadow: 0 0 0 3px var(--color-focus);
}
</style>
