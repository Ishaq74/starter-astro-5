---
import Wrapper from '@atoms/Wrapper.astro';
import { Icon } from 'astro-icon/components';

interface Props {
  placeholder?: string;
}

const { placeholder = 'Rechercher...' } = Astro.props as Props;
---

<Wrapper display="flex" alignItems="center" gap="0.5rem" className="header-search" tag="form" role="search">
  <input type="search" aria-label="Recherche" placeholder={placeholder} class="search-input" />
  <button type="submit" aria-label="Lancer la recherche" class="search-button">
    <Icon name="mdi:magnify" size={20} />
  </button>
</Wrapper>

<style is:inline>
.header-search { align-items:center; }
.search-input {
  padding: .5rem .75rem;
  border-radius: var(--radius-1);
  border: 1px solid var(--color-border);
  background: var(--color-surface);
}
.search-button {
  background: transparent;
  border: none;
  padding: .25rem;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
</style>
